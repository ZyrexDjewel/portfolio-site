---
interface Props {
  title: string;
  description: string;
  technologies: string;
  image: string;
  link: string;
}

const { title, description, technologies, image, link } = Astro.props as Props;
---

<div
  class="flex flex-col lg:flex-row items-center justify-between px-6 lg:px-40 py-10 lg:py-20 bg-white rounded-lg shadow-md"
>
  <!-- Image Section -->
  <div class="flex-shrink-0">
    <img src={image} alt={title} class="w-60 h-60 md:w-80 md:h-80 lg:w-100 lg:h-100 object-cover rounded-md" />
  </div>

  <!-- Text Section -->
  <div class="mt-6 lg:mt-0 lg:ml-8 text-center lg:text-right flex-1 lg:pl-20 max-w-2xl">
    <h3 class="text-xl md:text-2xl lg:text-4xl font-bold">{title}</h3>
    <p class="text-base md:text-lg lg:text-2xl text-[#1D1D1D] mb-4">{description}</p>
    <p class="text-base md:text-lg lg:text-2xl text-[#1D1D1D] font-bold">
      Technologies
    </p>
    <p class="text-base md:text-lg lg:text-2xl text-[#1D1D1D] mb-4">
      {technologies}
    </p>
    <a
      href={link}
      class="text-base md:text-lg lg:text-2xl font-semibold text-[#6D9886] hover:underline"
    >
      View Project
    </a>
  </div>
</div>
