<BaseLayout title="Home">
  <NavBar />
  <main class="py-32">
    <!-- Section 1 -->
    <div class="my-3 max-w-4xl ml-6 sm:ml-10 md:ml-20 lg:ml-40">
      <p class="text-2xl md:text-3xl lg:text-4xl font-semibold">Hi, I'm</p>
      <h1 class="text-6xl lg:text-8xl font-bold my-3">Zyrex Djewel</h1>
      <p class="sm:text-xl md:text-xl lg:text-2xl font-medium mt-10 pr-4">
        Aspiring full-stack developer with experience in
      </p>
      <h3 class="text-4xl lg:text-6xl text-[#6D9886] font-semibold mt-4">
        Next.js
      </h3>
      <button
        class="mt-6 px-4 py-2 bg-[#C69749] text-white font-semibold rounded-md shadow hover:bg-[#a87c37] transition"
      >
        Download CV
      </button>
    </div>
    <!-- Section 2 -->
    <div class="bg-[#1C1C1C] mt-64 pb-16">
      <div class="text-center max-w-4xl mx-auto px-4">
        <h3 class="text-2xl md:text-4xl text-[#F5F5F5] font-semibold pt-16">
          About Me
        </h3>
        <p class="text-base md:text-2xl text-[#F5F5F5] font-medium my-4">
          As an aspiring software developer with a passion for system
          development and digital transformation, I am a computer science
          graduate from the University of the Philippines Visayas. I am
          continuously honing my skills and am eager to create digital solutions
          for society.
        </p>
        <div class="flex justify-center gap-6 pt-12">
          <Tabs client:load />
        </div>
      </div>
    </div>
    <!-- Section 3 -->
    <div class="mt-10">
      <div class="text-center max-w-4xl mx-auto px-4">
        <h3 class="text-2xl md:text-4xl text-[#1C1C1C] font-bold">Projects</h3>
        <p class="md:text-lg lg:text-2xl text-[#1C1C1C] pt-4">
          Take a look at my selected projects in software engineering and other
          computer science field
        </p>
        <button
        class="md:text-lg lg:text-2xl mt-6 px-4 py-2 bg-[#C69749] text-white font-semibold rounded-md shadow hover:bg-[#a87c37] transition"
      >
        View More 
      </button>
      </div>
      
      <div class="pt-10">
        <ProjectCard
          image="/projects/seaxchange.png"
          title="SeaXChange"
          description="SeaXChange is a blockchain driven web application system, intended for providing traceability of products within small-scale  tuna supply chain. "
          technologies="Developed using Hyperledger Fabric, Docker, GCP, Next.js, and Node.js with Express.js."
          link="https://github.com/jeffrouzel/SeaXChange-Web.git"
        />
        <!-- Project 2 -->
        <ProjectCard
          image="/projects/magsasakay.png"
          title="Magsasakay"
          description="A commute app intended for locals and tourists of Iloilo City."
          technologies="React, Node.js, Express.js, MongoDB, Leaflet"
          link="https://github.com/KristianLyle/Magsasakay.git"
        />
        <!-- Project 3 -->
        <ProjectCard
          image="/projects/pawlorie.png"
          title="Pawlorie"
          description="A mobile app for tracking calories for different dog breeds."
          technologies="Flutter, Firebase"
          link="https://drive.google.com/drive/u/0/folders/1CLrktpdMVsoL1vYd78AbCGfy6aNsVHZt"
        />
      </div>
      <!-- Project 1 -->
    </div>
  </main>

  <Footer />
</BaseLayout>
